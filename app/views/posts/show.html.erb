<main class="container">
  <div class="row">
    <div class="post-show-blog">
      <h1 class="title-font font-italic text-center"><%= @post.title %></h1>
      <p><%= raw @post.body %></p>
      <% if current_user %>
        <div class="like-post-container text-left">
            <%= link_to like_post_path(@post, like: true), method: 'post', remote: true do %>
                <span class="like-text-post">Like Post</span><i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                <span id="post_<%= @post.id %>_likes"><%= @post.likes.size %></span>
            <% end %>
        </div><br>
      <% end %>
      <h2 class="comment-notes"><%= link_to "View comments", comments_post_path(@post), class: "comments#{@post.id} show-comments like-text-post", remote: true %>
        <span class="like-text-post"><%="(#{@post.comments.size})"%></span>
      </h2>
      <div class="comments-display<%=@post.id%>"></div>
    </div>
  </div><br>

  <% if current_user %>
    <%= render 'comments/form', comment: Comment.new, post: @post %>
  <% else %>
    <h3 class="comment-notes font-italic">You must be signed in to comment</h3><br>
  <% end %>
</main>
