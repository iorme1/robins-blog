if ($(".comments<%=@post.id%>").text() === "View comments") {
  $(".comments-display<%= @post.id %>").html("<%= j render "comments/comment" %>")
  $(".comments<%=@post.id%>").html("Hide comments")
} else {
  $(".comments-display<%= @post.id %>").html("")
  $(".comments<%=@post.id%>").html("View comments")
}
