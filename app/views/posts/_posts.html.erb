<div class="row">
    <div class="col-xs-12 col-md-12 col-lg-9">
        <% @posts.each do |post| %>
            <div class="col-md-12 col-lg-12 preview-div">
                 <h2 class="title-font font-italic"><%= post.title.upcase %></h2>
                 <p class="text-muted font-italic"><%= post.created_at.strftime("%Y-%m-%d") + " By Robin Orme" %></p>
                 <div class="preview-blog-text">
                     <p><%= raw post.body.truncate(250) %></p>
                 </div>
                 <div class="read-post-btn-div">
                     <%= link_to post_path(post), :class => "btn btn-info"  do %>
                         Read Post
                     <% end %>
                 </div>
             </div>
        <% end %>
    </div>
</div>
