<% @posts.each do |post| %>
    <div class="blog-container">
        <div class="row">
            <div class="col-md-8 preview-div">
                 <h2 class="title-font font-italic"><%= post.title.upcase %></h2>
                 <p class="text-muted font-italic"><%= post.created_at.strftime("%Y-%m-%d") + " By Robin Orme" %></p>
                 <div class="preview-blog-text">
                     <p><%= raw post.body.truncate(250) %></p>
                 </div>
            </div>
            <% if post.cover? %>
              <div class="col-md-4">
                  <div class="image-div">
                      <%= image_tag(post.cover.url, alt: "Cover Image for #{post.title}", class: "cover-image") %>
                  </div>
              </div>
            <% end %>
        </div><br>
        <div class="row">
            <div class="col-md-6 text-center">
                <%= link_to post_path(post), :class => "btn btn-info btn-lg"  do %>
                    Read Full Post
                <% end %>
            </div><br><br>
            <div class="col-md-6 text-center">
                <% if current_user && current_user.admin? %>
                    <%= link_to "delete post", post_path(post), method: :delete, class: "btn btn-warning btn-sm",
                      data: { confirm: "Are you sure you want to delete this blog post?" } %>
                    <%= link_to "edit post", edit_post_path(post), class: "btn btn-sm btn-primary" %>
               <% end %>
            </div>
        </div><br>
    </div>
<% end %>
