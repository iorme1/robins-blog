<% if @comment.replies.empty? %>
  <h3 class="comment-notes">No replies for above comment</h3>
<% else %>
    <h3 class="comment-notes">Replies:</h3>
    <div class="reply-section">
        <% @comment.replies.each do |reply| %>
            <div class="comment-section border-reply jumbotron col-xs-12 col-md-12 col-lg-8">
                <p class="text-primary font-italic"><%= reply.user.email.split('@')[0] %>
                  <span class="text-muted">
                    <%= "- " + time_ago_in_words(reply.created_at) + " ago" %>
                  </span>
                </p>
                <p><%= reply.body %></p>
                <div class="row">
                    <div class="col-md-8">
                        <% if reply.user === current_user || (current_user && current_user.admin?) %>
                            <%= link_to "delete", post_reply_path(@post,reply),
                              method: :delete, class: "rfp-btn btn btn-sm btn-info", data: { confirm: "Are you sure you want to delete this comment?"} %>
                              <%= link_to "edit", edit_post_comment_reply_path(@post,@comment,reply), class: "rfp-btn btn btn-sm btn-info" %>
                        <% end %>
                    </div>
                    <% if current_user %>
                        <div class="col-md-4 text-right like-container">
                            <%= link_to like_post_comment_reply_path(@post,@comment,reply, like: true), method: 'post', remote: true do %>
                                <span class="like-text-comment">Like</span><i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                                <span id="reply_<%= reply.id %>_likes"><%= reply.likes.size %></span>
                            <% end %>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
