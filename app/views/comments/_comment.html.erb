<% @post.comments.each do |comment| %>
    <div class="comment-section comment-container jumbotron col-xs-12 col-md-12 col-lg-8">
        <p class="text-info"><%= comment.user.email.split('@')[0] %>
            <span class="text-muted">
              <%= "- " + time_ago_in_words(comment.created_at) + " ago" %>
            </span>
        </p>
        <p><%= comment.body %></p>

        <div class="row">
            <div class="col-md-4">
                <% if comment.user === current_user || (current_user && current_user.admin?) %>
                    <%= link_to "delete", post_comment_path(@post,comment),
                      method: :delete, class: "btn btn-sm btn-warning", data: { confirm: "Are you sure you want to delete this comment?"} %>
                      <%= link_to "edit", edit_post_comment_path(@post,comment), class: "btn btn-sm btn-primary" %>
                <% end %>
            </div>
            <% if current_user %>
                <div class="col-md-3 text-right like-container">
                    <%= link_to like_post_comment_path(@post,comment, like: true), method: 'post', remote: true do %>
                        <span class="like-text-comment">Like</span><i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                        <span id="comment_<%= comment.id %>_likes"><%= comment.likes.size %></span>
                    <% end %>
                </div>
            <% end %>
            <div class="col-md-5 reply-container">
              <% if current_user %>
                 <span class="reply-to-comment"> <%= link_to "Reply", new_post_comment_reply_path(@post, comment) %> </span>
                 <span> | </span>
              <% end %>
               <span class="like-text-comment"><%= link_to "View replies", replies_post_comment_path(@post,comment), class: "replies#{comment.id} show-replies", remote: true %></span>
               <span class="like-text-comment"><%= "#{comment.replies.count}"%></span>
            </div>
        </div>
    </div>
       <div class="replies-display<%=comment.id%> reply-display"></div>
<% end %>
